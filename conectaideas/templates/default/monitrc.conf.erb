<% (@worker_count || 1).times do |num| %>
check process sidekiq_<%= @app_name %>_<%= num %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/sidekiq<%= num %>.pid
  start program = "/usr/bin/sudo su deploy -c 'cd <%= @deploy[:deploy_to] %>/current; RAILS_ENV=production bundle exec sidekiq -C config/sidekiq.yml -P <%= @deploy[:deploy_to] %>/shared/pids/sidekiq<%= num %>.pid >> <%= @deploy[:deploy_to] %>/shared/log/sidekiq.log 2>&1 &'" 
  stop program = "/bin/bash -c '/bin/kill -9 `cat <%= @deploy[:deploy_to] %>/shared/pids/sidekiq<%= num %>.pid`'" 
  if totalmem is greater than 700 MB for 2 cycles then restart # eating up memory?
  group sidekiq_<%= @app_name %>
<% end %>